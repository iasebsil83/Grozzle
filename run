# ---------------- IMPORTATIONS ----------------

#system
import os
import sys

#sources
sys.path.append( os.getcwd() )
from src.qomputer import *
from src.grover   import *
from src.rgba     import *






# ---------------- DECLARATIONS ----------------

#qonstants
VALUES_NBR    = 8
ITERATION_NBR = 1000






# ---------------- EXECUTION ----------------

#create qomputer
qo = Qomputer(
	VALUES_NBR+1, #qbits
	VALUES_NBR    #measures
)

#set values
values = []
for v in range(VALUES_NBR):
	values.append( 0b0000_0000 )
current = 0b0000_1000

#set circuit
qo.circuit = getGroverCircuit(VALUES_NBR)
qo.showCircuit()

#execute
print( qo.run(ITERATION_NBR) )
